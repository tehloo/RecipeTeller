<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout tools:context=".SignupActivity" android:layout_height="match_parent" android:layout_width="match_parent" xmlns:tools="http://schemas.android.com/tools" xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_height="wrap_content"
            android:layout_width="match_parent"
            android:orientation="vertical"
            android:background="#F87F22">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp"
                android:text="기본 정보 입력"
                android:textColor="#ffffff"
                android:textSize="30dp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout android:layout_height="match_parent"
            android:layout_width="match_parent" android:orientation="vertical">
            <LinearLayout
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:orientation="horizontal"
                android:layout_marginTop="50dp"
                android:layout_gravity="center"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:background="#C3C3C3"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:hint="이름"
                android:id="@+id/nameText"/>

            <EditText
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:background="#C3C3C3"
                android:textColor="#ffffff"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:textColorHint="#ffffff"
                android:padding="10dp"
                android:hint="나이"
                android:id="@+id/ageText"/>


            <RadioGroup
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_gravity="center_horizontal"
                android:id="@+id/genderGroup">

                <RadioButton
                    android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="여자"
                    android:id="@+id/genderWoman"
                    android:checked="true"
                    android:layout_weight="1"/>

                <RadioButton android:layout_height="wrap_content"
                    android:layout_width="0dp"
                    android:text="남자"
                    android:id="@+id/genderMan"
                    android:layout_weight="1"/>
            </RadioGroup>

            <Button
                android:layout_height="wrap_content"
                android:layout_width="280dp"
                android:background="#3A7FC2"
                android:textStyle="bold"
                android:textSize="20dp"
                android:textColor="#ffffff"
                android:text="확인"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:id="@+id/registerButton"/>

            <TextView android:layout_height="wrap_content"
                android:layout_width="wrap_content"
                android:textSize="17dp"
                android:text="로그인으로 돌아가기"
                android:layout_marginTop="10dp"
                android:layout_gravity="center"
                android:padding="10dp"
                android:id="@+id/backToLogin"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>